# Supabase URL — find it in Supabase Dashboard → Settings → API → Project URL
SUPABASE_URL=https://your-project.supabase.co
# Supabase Anon Key — for manual auth verification fallback
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase JWT secret — find it in Supabase Dashboard → Settings → API → JWT Secret
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# Supabase anon key — find it in Supabase Dashboard → Settings → API → anon/public key
# Required for JWKS-based auth (newer Supabase projects using asymmetric keys)
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Server port (Railway sets this automatically)
PORT=3001
